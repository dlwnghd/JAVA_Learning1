//		[오늘의 문제]
		/*
		 * 	*
		 * 	**
		 * 	***
		 * 	****
		 * *****
		 * 
		 * */
		
//		전체적으로 보면 
//		1. "*"을 다섯번 출력하고
//		2. "엔터" 입력
//		위를 5번 반복하여 완성
		for(int i =0; i <5; i++) {		// i는 0; i가 5미만동안; i = i+1; (i => 0,1,2,3,4)
			for(int j = 0; j <= i; j++) {	// j는 0; j가 i미만동안; j = j + 1; (j => 0,1,2,3,4 지만 i보다 클 수 없음)
				System.out.print("*");	// "*"출력
			}
			System.out.println();	// 다음 줄로 이동
		}
		
		/*
		 *       *
		 *      **
		 *    ***
		 *  ****
		 * *****
