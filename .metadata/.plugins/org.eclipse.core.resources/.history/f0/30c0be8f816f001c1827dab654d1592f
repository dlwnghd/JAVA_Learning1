//			for(int j = 0; j < i-1; j++) {	// j는 0; j가 (i-1)미만동안; j = j + 1;
//				System.out.print(" ");	// "*"출력
//			}
//			for(int j = 0; j < num; j++) {
//				System.out.print("*");
