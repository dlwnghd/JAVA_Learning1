package day06;

import java.util.Scanner;

public class NestedForTest {
	public static void main(String[] args) {
		for (int i = 0; i < 3; i++) {	// i는 0; i가 3미만인 동안 반복; i는 반복할때마다 1씩 추가
			for (int j = 0; j < 2; j++) {	// j는 0; j가 2미만인 동안 반복; j는 반복할때마다 1씩 추가
				System.out.println("i : " + i + " j : " + j);
			}
		}
		
		/*
		 * 	*****
		 * 	*****
		 * 	*****
		 * 	***** 
		 * 	***** 
		 * */
		
		// 1번째 for문은 열
		// 2번째 for문을 행으로 생각하면 하기 쉬움
		
//		전체적으로 보면 
//		1. "*"을 다섯번 출력하고
//		2. "엔터" 입력
//		위를 5번 반복하여 완성
		
//		for(int j = 0; j <5; j++) {	// j는 0; j가 5미만인 동안 반복; j는 반복할때마다 1씩 추가(j => 0,1,2,3,4)
//			for(int i = 0; i <5; i++) {	// i는 0; i가 5미만인 동안 반복; i는 반복할때마다 1씩 추가( i =>0,1,2,3,4)
//				System.out.print("*");	// "*" 출력
//			}
//			System.out.println();		// 줄 띄우기
